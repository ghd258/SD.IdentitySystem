@model SD.IdentitySystem.IPresentation.ViewModels.Outputs.RoleView
@{
    ViewBag.Title = "修改角色";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <link type="text/css" href="~/Content/css/Common/Form.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content/scripts/Role/Update.js"></script>
}

@*角色信息面板*@
<div style="width: 48%; height: 50%; float: left; margin: 5px;">
    <div class="easyui-panel" title="角色信息" data-options="footer:'#footer'" style="width: 100%; height: 626px; padding: 10px;">
        <form id="frmUpdateRole">
            @*角色Id*@
            <input type="hidden" id="txtRoleId" name="roleId" value="@Model.Id" />
            <table id="tbAdd">
                <tr>
                    <td class="tdTitle">信息系统：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" value="@Model.SystemName" data-options="disabled:true,width:210" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">角色名称：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="roleName" value="@Model.Name" data-options="required:true,width:210" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">角色描述：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="description" value="@Model.Description" data-options="multiline:true,width:210" style="height: 70px" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div id="footer" style="padding: 5px;">
        <div style="float: right;">
            <a href="#" onclick="updateRole();" class="easyui-linkbutton c6" data-options="iconCls:'icon-ok'" style="width:90px">确定</a>
            <a href="#" onclick="javascript: $.easyuiExt.closeWindow();" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" style="width:90px">取消</a>
        </div>

    </div>
</div>

@*权限信息面板*@
<div style="width: 48%; height: 50%; float: right; margin: 5px;">
    <div class="easyui-panel" title="权限列表" style="width:100%;height:626px;padding:10px;">
        <ul id="authorityTree" class="easyui-tree"></ul>
    </div>
</div>
