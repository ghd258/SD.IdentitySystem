@model SD.IdentitySystem.IPresentation.ViewModels.Outputs.MenuView
@{
    ViewBag.Title = "关联权限";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <script type="text/javascript" src="~/Content/scripts/Menu/RelateAuthority.js"></script>
}

<input type="hidden" id="txtSystemNo" value="@Model.SystemNo" />
<input type="hidden" id="txtMenuId" value="@Model.Id" />

<div style="width: 100%; height: 100%; float:left; margin: 0;">
    <div class="easyui-panel" data-options="footer:'#footer'" style="width: 100%; height: 502px; padding: 10px;">
        <ul id="authorityTree" class="easyui-tree"></ul>
    </div>
    <div id="footer" style="padding: 5px;">
        <div style="float: right;">
            <a href="#" onclick="relateAuthorities();" class="easyui-linkbutton c6" data-options="iconCls:'icon-ok'" style="width:90px">确定</a>
            <a href="#" onclick="javascript: $.easyuiExt.closeWindow();" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" style="width:90px">取消</a>
        </div>
    </div>
</div>
