@model SD.IdentitySystem.IPresentation.Models.Authority
@{
    ViewBag.Title = "修改权限";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <link type="text/css" href="~/Content/css/Common/Form.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content/scripts/Authority/Update.js"></script>
}

<div style="width: 100%; height: 100%; float:left; margin: 0;">
    <div class="easyui-panel" data-options="footer:'#footer'" style="width: 100%; height: 320px; padding: 10px;">
        <form id="frmUpdateAuthority">
            <input type="hidden" name="authorityId" value="@Model.Id" />
            <table id="tbAdd" style="margin: 0 auto;">
                <tr>
                    <td class="tdTitle">信息系统：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" data-options="disabled:true,width:210" value="@Model.InfoSystemName" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">应用程序类型：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" data-options="disabled:true,width:210" value="@Model.ApplicationTypeName" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">权限名称：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="authorityName" data-options="required:true,width:210" value="@Model.Name" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">权限路径：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="authorityPath" data-options="width:210" value="@Model.AuthorityPath" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">描述：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="description" data-options="multiline:true,width:210" style="height: 70px" value="@Model.Description" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div id="footer" style="padding: 5px;">
        <div style="float: right;">
            <a href="#" onclick="updateAuthority();" class="easyui-linkbutton c6" data-options="iconCls:'icon-ok'" style="width:90px">确定</a>
            <a href="#" onclick="javascript: $.easyuiExt.closeWindow();" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" style="width:90px">取消</a>
        </div>
    </div>
</div>
