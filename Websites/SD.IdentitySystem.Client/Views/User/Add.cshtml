@{
    ViewBag.Title = "创建用户";
}

@section header{
    <link type="text/css" href="~/css/Common/Form.css" rel="stylesheet" />
    <script type="text/javascript" src="~/scripts/User/Add.js"></script>
}

<form asp-controller="User" asp-action="CreateUser"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="addBegin" data-ajax-success="addSucceed" data-ajax-failure="addFail">
    <div style="width: 100%; height: 100%; float: left; margin: 0;">
        <div class="easyui-panel" data-options="footer:'#footer'" style="width: 100%; height: 220px; padding: 10px;">
            <table id="tbAdd">
                <tr>
                    <td class="tdTitle">用户名：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="loginId" data-options="required:true,iconCls:'icon-man',width:210" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">真实姓名：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="realName" data-options="required:true,iconCls:'icon-man',width:210" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">密码：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="password" name="password" data-options="required:true,iconCls:'icon-lock',width:210" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">确认密码：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="password" name="confirmPassword" data-options="required:true,iconCls:'icon-lock',width:210" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div id="footer" style="padding: 5px;">
        <div style="float: right;">
            <a href="#" onclick="javascript: $('#frmCreateUser').submit();" class="easyui-linkbutton c6" data-options="iconCls:'icon-ok'" style="width:90px">确定</a>
            <a href="#" onclick="javascript: $.easyuiExt.closeWindow();" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" style="width:90px">取消</a>
        </div>
    </div>
</form>
