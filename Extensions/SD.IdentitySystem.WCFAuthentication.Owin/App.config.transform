<configuration>
  <appSettings>
    <!--身份过期时间，单位：分钟-->
    <add key="AuthenticationTimeout" value="20" />
  </appSettings>
  <system.serviceModel>
    <extensions>
      <behaviorExtensions>
        <!--WCF/OWIN客户端身份认证扩展配置-->
        <add name="owinAuthentication" type="SD.IdentitySystem.WCFAuthentication.Owin.AuthenticationBehaviorElement, SD.IdentitySystem.WCFAuthentication.Owin"/>
      </behaviorExtensions>
    </extensions>
  </system.serviceModel>
</configuration>